{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": [
    "src/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
